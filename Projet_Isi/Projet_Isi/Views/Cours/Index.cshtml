@model System.Data.DataTable
@using System.Data;

@{
    ViewBag.Title = "Liste des Cours";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model != null)
{
        <div class="container">
            <div class="col-md-8 col-sm-8">
                <div class="blanc">
                    <h1>Liste des Cours</h1>
                </div>

                <table class="table table-bordered table-striped table-responsive">
                    <thead>
                        <tr>
                            <th>ID Cours</th>
                            <th>Nom du Cours</th>
                            <th> Description</th>
                            <th> Nom du Prof</th>
                            <th> Durée</th>
                            <th>Date</th>
                            <th style="width:80px"> Ajouter</th>
                            <th style="width:80px"> Modifier</th>
                            <th style="width:80px"> Supprimer</th>
                        </tr>
                    </thead>
                    @foreach (DataRow dataRow in Model.Rows)
                    {
                        <tr>
                            @foreach (var item in dataRow.ItemArray)
                            {
                                <td>
                                    @item.ToString()
                                </td>

                            }
                            <td style="text-align:center;">
                                <span>
                                    <a href="@Url.Action("Ajouter", "Cours", new { id = dataRow[0] })" class="btn btn-default btn-primary">
                                        <i class="bi bi-pencil-fill"></i>
                                    </a>
                                </span>
                            </td>
                            <td style="text-align:center;">
                                <span>
                                    <a href="@Url.Action("Modifier", "Cours", new { id = dataRow[0] })" class="btn btn-default btn-primary">
                                        <i class="bi bi-pencil-fill"></i>
                                    </a>
                                </span>
                            </td>
                            <td style="text-align:center;">
                                <span>
                                    <a href="@Url.Action("Supprimer", "Cours", new { id = dataRow[0] })" class="btn btn-default btn-primary">
                                        <i class="bi bi-trash3-fill"></i>
                                    </a>
                                </span>
                            </td>

                        </tr>
                     }
                </table>
                <div class="form-group">
                    <div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">
                         @Html.ActionLink("Retourner à l'accueil", "Index", "Home", null, new { @class = "btn btn-default btn-primary" })
                    </div>
                </div>
            </div>
        </div>
}
