@{
    ViewData["Title"] = "Connexion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-controller="Connexion" asp-action="Controle" class="login-form" method="post">
                <h1 class="text-center">Connexion</h1>
                <hr />

                <div class="form-group">
                    <label for="login">Identifiant</label>
                    <input type="text" id="login" name="login" class="form-control" />
                </div>

                <div class="form-group">
                    <label for="pwd">Mot de passe</label>
                    <input type="password" id="pwd" name="pwd" class="form-control" />
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-6">
                            <input type="submit" value="Se Connecter" class="btn btn-success btn-block" />
                        </div>
                        <div class="col-md-6">
                            @Html.ActionLink("Créer un compte", "Index", "Inscription", null, new { @class = "btn btn-primary btn-block" })
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
